<% layout("layouts/boilerplate") %>

<div class="row">
	<div class="col-6 offset-3">
		<div class="card">
			<img src="<%= campground.image %>" class="card-img-top img-fluid" alt="image of a campground" />
			<div class="card-body">
				<h5 class="card-title"><%= campground.title %></h5>
				<p class="card-text"><%= campground.description %></p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item text-muted"><%= campground.location %></li>
				<li class="list-group-item">$<%= campground.price %> per night</li>
			</ul>
			<div class="card-body">
				<a class="card-link btn btn-primary" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
				<form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
					<button class="btn btn-danger">Delete</button>
				</form>
			</div>
		</div>
		<div class="mt-3 mb-5">
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>
